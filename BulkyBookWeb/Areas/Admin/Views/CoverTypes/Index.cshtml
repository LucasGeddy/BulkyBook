@model IEnumerable<BulkyBook.Models.CoverType>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Cover Type List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create"><i class="bi bi-plus-circle"></i> &nbsp; Create New Cover Type</a>
        </div>
    </div>
</div>
<br />
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
        <tr>
            <td width="50%">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <div class="w-50 btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="bi bi-x-circle"></i> Delete
                    </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
